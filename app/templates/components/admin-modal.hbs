{{yield}}

<!-- INSIDE MODAL -->
<div class="admin-section">
  {{#if modalShowing}}
    {{#modal-dialog close="toggleModal"
                    targetAttachment="center"
                    translucentOverlay=true}}
      <div class="admin-modal">
        <h2>Admin Only</h2>
        <div class="row">
          {{add-category saveCat2="saveCat3"}}
        </div>
        <div class="row">
          {{add-product model=model saveProd2="saveProd3"}}
        </div>
        <div class="row">
          <button class="btn admin-btn btn-danger" {{action 'toggleModal'}}>Close</button>
        </div>
      </div>
    {{/modal-dialog}}
  {{else}}
    <button class="btn header-btn" {{action 'toggleModal'}}>Admin</button>
  {{/if}}
</div>
