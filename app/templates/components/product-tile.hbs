{{yield}}
{{product.title}}

<div class="product-box">
  <div class="col-sm-6">
    <img class="product-image" src={{product.image}} alt={{product.title}} />
  </div>
  <div class="col-sm-6">
    <div class="row">
      <h4>{{product.title}}</h4>
      <p>
        {{product.summary}}
      </p>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <button class="btn fave-btn" {{action "addToFave" product}}>{{fa-icon "star"}}</button>
        <h5>{{product.platform}}</h5>
      </div>
      <div class="col-xs-6">
        {{review-modal product=product saveRev4="saveRev5"}}
      </div>
    </div>
  </div>
</div>
