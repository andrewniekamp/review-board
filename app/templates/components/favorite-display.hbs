{{yield}}
<div class="favorite-section">
  {{#if modalShowing}}
    {{#modal-dialog close="toggleModal"
                    targetAttachment="center"
                    translucentOverlay=true}}
      <div class="favorite-modal">
        <h1>Favorites</h1>
        {{#if favorites.items}}
          <button class="btn btn-danger" {{action 'emptyFaves'}}>Clear Favorites</button>
          {{#each favorites.items as |items|}}
          <hr>
          <div class="cart-items">
            <div class="row">
              <div class="col-xs-7">
                <h4>{{items.title}}, from {{items.category.name}}</h4>
                <button class="btn btn-danger" {{action 'removeFromFaves' items}}>Remove</button>
              </div>
              <div class="col-xs-5">
                <img class="fave-img" src={{items.image}} alt={items.title} />
              </div>
            </div>
          </div>
          {{/each}}
        {{else}}
          <h1>Your Favorites are Empty</h1>
        {{/if}}
      </div>
      <button class="btn admin-btn" {{action 'toggleModal'}}>Close</button>
    {{/modal-dialog}}
  {{else}}
    <button class="btn header-btn header-fave-btn" {{action 'toggleModal'}}>Favorites</button>
  {{/if}}
</div>
